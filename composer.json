{
    "name": "team-nifty-gmbh/forge-sdk",
    "description": "PHP SDK for forge RESTful API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Team Nifty GmbH",
            "email": "info@team-nifty.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "saloonphp/saloon": "^3.0",
        "saloonphp/pagination-plugin": "^2.0",
        "spatie/laravel-data": "^4.0",
        "illuminate/support": "^12.0",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "laravel/pint": "^1.25",
        "pestphp/pest": "^4.0",
        "orchestra/testbench": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "TeamNifty\\Forge\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "TeamNifty\\Forge\\ForgeServiceProvider"
            ],
            "aliases": {
                "Forge": "TeamNifty\\Forge\\Facades\\Forge"
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamNifty\\Forge\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest --do-not-fail-on-deprecation",
        "test-coverage": "pest --coverage --min=100 --do-not-fail-on-deprecation",
        "test-coverage-html": "pest --coverage-html coverage --do-not-fail-on-deprecation"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
